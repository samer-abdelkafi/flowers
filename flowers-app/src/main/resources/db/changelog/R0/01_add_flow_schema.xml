        <addForeignKeyConstraint baseTableName="F_FLOW_DESTINATION_JMS"
                                 baseColumnNames="ID"
                                 constraintName="FK_DEST_JMS_TO_DEST"
                                 referencedTableName="F_DESTINATION"
                                 referencedColumnNames="ID" />

        <createTable tableName="F_FLOW_ERROR">
